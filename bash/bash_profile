# Terminal colouring
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad
alias ls='ls -GFh'

export PATH="$HOME:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="/usr/local/bin:$PATH"
export PATH="/opt/spark/bin:$PATH"
export DYLD_FALLBACK_LIBRARY_PATH=/usr/local/opt/openblas/lib/libopenblasp-r0.2.15.dylib:$DYLD_FALLBACK_LIBRARY_PATH
export DYLD_FALLBACK_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/Users/akkhong/anaconda/lib

# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

source ~/dotfiles/bash/bash_shortcuts.sh
source ~/dotfiles/bash/bash_python.sh
source ~/dotfiles/bash/bash_docker.sh
source ~/dotfiles/bash/bash_preferences.sh
source ~/dotfiles/google_cloud/bash_gcp.sh
source ~/dotfiles/aws/bash_aws.sh

export PATH="$HOME/.cargo/bin:$PATH"
export SCREEN=xterm-256color

export IP=$(ifconfig en0 | grep inet | awk '$1=="inet" {print $2}')
