# Terminal colouring
export CLICOLOR=1
export LSCOLORS=ExFxBxDxCxegedabagacad
alias ls='ls -GFh'
export PATH=/usr/bin:$PATH
export PATH=/usr/local/bin:$PATH

# added by Anaconda 2.3.0 installer
export PATH="//anaconda/bin:$PATH"
export DYLD_FALLBACK_LIBRARY_PATH=$DYLD_FALLBACK_LIBRARY_PATH:/Users/akkhong/anaconda/lib
export PYTHONPATH=/Users/akkhong
export PYTHONPATH=$PYTHONPATH:/Users/akkhong/cmls
export PYTHONPATH=$PYTHONPATH:/Users/akkhong/third_party/xgboost/python-package/
export user=akk_mac

# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# Make Elinks read HTML
export VMAIL_HTML_PART_READER='elinks -dump'

# Stop Python from generating .pyc files
export PYTHONDONTWRITEBYTECODE=1

source ~/dotfiles_akk/bash/bash_shortcuts
source ~/dotfiles_akk/bash/bash_preferences
