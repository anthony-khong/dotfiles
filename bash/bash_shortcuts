# Git shortcuts
function fastpush() {
    git add -u;
    git commit -m "$*";
    git push;
}
function gsu() {
    git submodule init;
    git submodule update;
}

function update_dots() {
    cd ~/dotfiles_akk;
    git pull;
    git submodule init;
    git submodule update;
    echo 'Updating plugins, this will take at least a second!'
    nvim +PlugInstall +qall
}

function gpa() {
    cd ~/applied_modelling;
    git pull;
    cd ~/hrvalue;
    git pull;
    update_dots;
    cd;
}
function clone_dotfiles() {
    git clone git@github.com:anthony-khong/dotfiles_akk.git;
    cd dotfiles_akk;
    git submodule init;
    git submodule update;

    cd;
    rm .vimrc;
    echo "set runtimepath^=~/dotfiles_akk/vim" >> .vimrc;
    echo "source ~/dotfiles_akk/vim/vimrc" >> .vimrc;
    rm -rf .vim;
    ln -s ~/dotfiles_akk/vim/ .vim;

    cd;
    rm .nvimrc;
    echo "set runtimepath^=~/dotfiles_akk/vim" >> .nvimrc;
    echo "source ~/dotfiles_akk/vim/vimrc" >> .nvimrc;
    rm -rf .nvim;
    ln -s ~/dotfiles_akk/vim/ .nvim;

    nvim +PlugInstall +qall
    nvim +PlugUpdate +qall
}
function fix_nvim_tmux_navigator () {
    infocmp $TERM | sed 's/kbs=^[hH]/kbs=\\177/' > $TERM.ti
    tic $TERM.ti
}

