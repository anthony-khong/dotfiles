cd;
if [[ "$(uname)" == "Darwin" ]]; then
    rm -rf .bash_profile;
    ln -s dotfiles/bash/bash_profile .bash_profile;
    ln -s dotfiles/bash/bash_profile .bashrc;
elif [[ "$(uname)" == "Linux" ]]; then
    rm -rf .bashrc;
    ln -s dotfiles/bash/bashrc .bashrc;
fi
rm -rf -f .zshrc
ln -s ~/dotfiles/bash/zshrc .zshrc

rm -rf .inputrc;
ln -s dotfiles/bash/inputrc .inputrc;

cd;
rm -rf .vimrc;
rm -rf .vim;
ln -s ~/dotfiles/vim/vimrc .vimrc;
ln -s ~/dotfiles/vim/ .vim;

cd;
rm -rf .emacs;
ln -s ~/dotfiles/emacs/emacs.el .emacs;
rm -rf .emacs.d
mkdir -p .emacs.d

mkdir -p ${XDG_CONFIG_HOME:=$HOME/.config};
rm -rf $XDG_CONFIG_HOME/nvim;
ln -s ~/dotfiles/vim $XDG_CONFIG_HOME/nvim;

rm -rf .tmux.conf;
ln -s ~/dotfiles/tmux/tmux.conf .tmux.conf;

rm -rf .ghci;
mkdir -p .ghci
ln -s ~/dotfiles/ghci .ghci;

mkdir -p .lein
rm -rf .lein/profiles.clj
ln -s ~/dotfiles/lein_profiles.clj .lein/profiles.clj
mkdir -p .config/conjure
ln -s ~/dotfiles/conjure.edn .config/conjure/.conjure.edn

if [[ ! -e "$HOME/.config/karabiner/karabiner.json" ]]; then
    rm ~/.config/karabiner/karabiner.json
    ln -s ~/dotfiles/bash/karabiner.json .config/karabiner/karabiner.json
fi
