# Bash shortcuts
function sbash() {
    if [ "$(uname)" == "Darwin" ]; then
        echo 'bash_profile reloaded!'
        source ~/.bash_profile;
    elif [ "$(uname)" == "Linux" ]; then
        echo 'bashrc reloaded!'
        source ~/.bashrc;
    fi
}

# Tmux shortcut
function tm() {
    tmux ls;
    sleep 0.25s;
    if [ -z "$1" ]; then
        tmux attach || tmux new -s 'unnamed_ession';
    else
        tmux attach || tmux new -s $1;
    fi
}

# Pandoc shortcuts
function md_to_pdf() {
    pandoc -V geometry:margin="$1"cm -o $3 $2
}
function md_to_wiki() {
    pandoc -r markdown $1 -t mediawiki -o $2
}

